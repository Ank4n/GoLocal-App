<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/detail_full_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kitchen_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/image_margin"
            android:fitsSystemWindows="true"
            android:maxHeight="400dp"
            android:scaleType="fitCenter"
            app:layout_collapseMode="parallax" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/end_margin"
                    android:layout_marginRight="@dimen/end_margin"
                    android:layout_marginTop="@dimen/end_margin"
                    android:text="Description"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kitchen_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/end_margin"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dish_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/end_margin"
            android:layout_marginTop="@dimen/image_margin"
            android:textColor="@color/primary_text"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:id="@+id/rating_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/end_margin"
                    android:layout_marginRight="@dimen/end_margin"
                    android:layout_marginTop="@dimen/end_margin"
                    android:text="@string/kitchen_rating_card_title"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/your_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/end_margin"
                    android:layout_marginRight="@dimen/end_margin"
                    android:layout_marginTop="@dimen/end_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:gravity="center"
                        android:text="You"
                        android:textSize="@dimen/text_size_bold"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/user_rating_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:textColor="@color/primary_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/end_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Overall"
                            android:textSize="@dimen/text_size_bold"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rated_user_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:gravity="center"
                            android:text="(10)"
                            android:textSize="@dimen/text_size_bold"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/overall_rating_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:textColor="@color/primary_text" />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/address_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/end_margin"
                    android:layout_marginRight="@dimen/end_margin"
                    android:layout_marginTop="@dimen/end_margin"
                    android:text="@string/kitchen_address_card_title"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kitchen_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/end_margin"
                    android:textColor="@color/primary_text" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>