<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:id="@+id/chat_incoming"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_in">

            <LinearLayout
                android:id="@+id/chat_company_reply_text_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:gravity="bottom"
                    android:text="User1"
                    android:textColor="@color/primary_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/message_in"
                    style="@style/chat_text_message_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="-2dp"
                    android:autoLink="web"
                    android:maxWidth="240dp"
                    android:text="Rahul Agrawal is a good boy but he does not know what he wants."
                    android:textColor="@color/primary_text" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_in"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/time_in"
                style="@style/chat_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/chat_company_reply_text_in"
                android:layout_alignBottom="@id/chat_company_reply_text_in"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/chat_company_reply_text_in"
                android:gravity="center"
                android:text="17:10"
                android:textColor="@color/secondary_text" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chat_outgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:clickable="false">


        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/msg_out">

            <LinearLayout
                android:id="@+id/chat_company_reply_text_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_out"
                    style="@style/chat_text_message_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web"
                    android:maxWidth="240dp"
                    android:text="Rahul Agrawal is a good boy but he does not know what he wants."
                    android:textColor="@color/primary_text" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="400dp"
                    android:id="@+id/image_out"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/time_out"
                    style="@style/chat_timings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/chat_company_reply_text_out"

                    android:layout_alignParentEnd="false"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/chat_company_reply_text_out"
                    android:gravity="center"
                    android:text="17:10 20/08"
                    android:textColor="@color/secondary_text" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>